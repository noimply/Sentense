<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sentence_intro_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/intro_log"
        style="@style/Sentence.Widget.ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_sentence_intro" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_developer"
        style="@style/Sentence.Widget.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/sentence_app_developer_name"
        android:textColor="@color/sentence_white"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_version"
        style="@style/Sentence.Widget.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.5"
        android:textColor="@color/sentence_white"
        android:textSize="10dp"
        tools:text="2021.10.1" />

</RelativeLayout>